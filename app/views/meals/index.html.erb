<div class="row">
    <div class="col-10 offset-1 col-md-6 offset-md-3"><h3>Recent Meals</h3></div>
</div>
<div class="row">
    <div class="col-10 offset-1 col-md-6 offset-md-3">
      <% @meals.each do |meal| %>
        <li> <%= link_to meal.recipe.name, meal.recipe %> - <%= meal.meal_date %></li>
      <% end %>
    </div>
   <div class="col-10 offset-1 col-md-2">
          <div class="row">
              <div class="col-12">
                <strong>Filter by Date</strong>
              </div>
              <div class="col-12">
                <% @time_period.each_pair do |text, number| %>
                  <li>
                    <%= link_to "#{text}", meals_path(date_filter: number, current_user: current_user.id), class: 'label label-primary' %>
                    <%=  hidden_field_tag :user_id, value: current_user.id %>
                  </li>
                <% end %>
              </div>
          </div>
      </div>
</div>