<% recipes.each do |recipe| %>
	<div class='row'>
		<%= link_to recipe.name, recipe_path(recipe) %>
	</div>
	<div class='row'>Ingredients: 
		<% recipe.ingredients.each do |ingredient| %>
			<%= ingredient.name %><% if ingredient != recipe.ingredients.last  %>,<% end %>
		<% end %>
	</div>
<% end %>